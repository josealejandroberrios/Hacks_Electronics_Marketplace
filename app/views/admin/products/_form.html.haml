= form_with(model: [:admin, @product], local: true) do |form|
    .field
        = form.label :name
        = form.text_field :name, class:"form-control"
    .field
        = form.label :description
        = form.text_area :description, class:"form-control", style: "height: 50px;"
    .field
        = form.label :price
        = form.number_field :price, class:"form-control"
    .field
        = form.label :quantity
        = form.number_field :quantity, class:"form-control"
    .field
        = form.file_field :image, class:"form-control"
    = form.submit class: "btn be-red white"